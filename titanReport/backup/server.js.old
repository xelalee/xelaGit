//step 1) require the modules we need
var
http  = require('http'),
https = require('https'),
path  = require('path'),
cron  = require('cron'),
fs    = require('fs'),

//these are the only file types we will support for now
extensions = {
    ".html" : "text/html",
    ".css" : "text/css",
    ".js" : "application/javascript",
    ".png" : "image/png",
    ".gif" : "image/gif",
    ".jpg" : "image/jpeg",
    ".json" : "application/json",
    ".tmpl" : "text/html"
},
// cron jobs
jobs = {};

// http service begin
//helper function handles file verification
function getFile(filePath,res,page404,mimeType) {
    //does the requested file exist?
    fs.exists(filePath,function(exists){
        //if it does...
        if(exists){
            //read the fiule, run the anonymous function
            fs.readFile(filePath,function(err,contents){
                if(!err){
                    //if there was no error
                    //send the contents with the default 200/ok header
                    res.writeHead(200,{
                        "Content-type" : mimeType,
                        "Content-Length" : contents.length
                    });
                    res.end(contents);
                } else {
                    //for our own troubleshooting
                    console.dir(err);
                };
            });
        } else {
            //if the requested file was not found
            //serve-up our custom 404 page
            fs.readFile(page404,function(err,contents){
                //if there was no error
                if(!err){
                    //send the contents with a 404/not found header 
                    res.writeHead(404, {'Content-Type': 'text/html'});
                    res.end(contents);
                } else {
                    //for our own troubleshooting
                    console.dir(err);
                };
            });
        };
    });
};

//a helper function to handle HTTP requests
function requestHandler(req, res) {
    var fileName = path.basename(req.url) || 'index.html',
    ext          = path.extname(fileName),
    localFolder  = __dirname + '/', 
    jsonFolder   = localFolder + 'json/',
    jsFolder     = localFolder + 'js/',
    tmplFolder   = localFolder + 'tmpl/',
    cssFolder    = localFolder + 'css/',
    imgFolder    = cssFolder + 'images/',
    page404      = localFolder + '404.html';

    //do we support the requested file type?
    if(!extensions[ext]){
        //for now just send a 404 and a short message
        res.writeHead(404, {'Content-Type': 'text/html'});
        res.end("&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body&gt;The requested file type is not supported&lt;/body&gt;&lt;/html&gt;");
    };

    //call our helper function
    //pass in the path to the file we want,
    //the response object, and the 404 page path
    //in case the requestd file is not found

    switch( ext )
    {
    case '.jpg':
    case '.png':
    case '.gif':
        getFile((imgFolder + fileName),res,page404,extensions[ext]);
        break;
    case '.css':
        getFile((cssFolder + fileName),res,page404,extensions[ext]);
        break;
    case '.js':
        getFile((jsFolder + fileName),res,page404,extensions[ext]);
        break;
    case '.json':
        getFile((jsonFolder + fileName),res,page404,extensions[ext]);
        break;
    case '.tmpl':
        getFile((tmplFolder + fileName),res,page404,extensions[ext]);
        break;
    default: 
        getFile((localFolder + fileName),res,page404,extensions[ext]);
    }
};
// http service end

//step 2) create the server to listen for an HTTP request on port 8080
http.createServer(requestHandler).listen(8080);

console.log('Server running @ http://127.0.0.1:8080/');

