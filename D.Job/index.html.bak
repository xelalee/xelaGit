    <script type="text/javascript">

    YUI( {filter: "raw", defaultGraphicEngine: "canvas"} ).use('anim', 'button-group', 'charts', 'charts-legend', 'console', 'cookie', 'datasource-io', 'datasource-jsonschema', 'datatable-base', 'datatable-sort', 'datatable-datasource', 'dd', 'dd-plugin', 'event', 'io-base', 'io-upload-iframe', 'json', 'json-parse', 'json-stringify', 'node', 'panel', 'uploader', function( Y ) {
        /* declare var */
        var hd = Y.one('#hd'), 
            bd = Y.one('#bd'), 
            ft = Y.one('#ft'), 
            usr = {};
        var login, cooked, cook;
        var menu, menu_btn, main, main_hd, main_bd, main_ft;

        /* draw hd, ft */    
        

        /* draw bd */
        if (Y.Cookie.get('djob_manager')) {
            bd.setHTML( genHTML( 'cooked' ) );
        } else {
            bd.setHTML( genHTML( 'login' ) );
        }

        /* login listener */
        var checkUser = function( _obj ) {
            _obj.power = 1;
            _obj.name = Y.one('#username').get('value');
            _obj.pass = Y.one('#userpass').get('value');
        }

        /* event listener */
        Y.one('#btnLogin').on('click', function(e) {
            checkUser( usr );

            if (1 === usr.power) {
                /* menu */
                /* main */
                bd.setHTML( genHTML( 'cooked' ) );
                menu = Y.one('#menu');
                main = Y.one('#main');
                main_hd = Y.one('#main_hd');
                main_bd = Y.one('#main_bd');
                main_ft = Y.one('#main_ft');

                menu.setHTML( genHTML( 'menu' ) );
                
                menu_btn = new Y.ButtonGroup({
                    srcNode: '#menu_btn',
                    type: 'radio',
                    on: {
                        'selectionChange' : function(e) {
                             var selected = menu_btn.getSelectedButtons()[ 0 ];
                             main_bd.setHTML( genHTML( 'input', selected.get('id').replace('menu-','') ) );
                    
                        }
                    }
                }).render()
            }
        });


    });
    
    </script>
